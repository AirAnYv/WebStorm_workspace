.main
  display flex
  flex-direction column

  .title-wrapper
    width: 100%
    positon fixed
    top 0

    .title
      flex 1
      height: 1rem
      background-color: #f2f2f2
      display: flex
      flex-direction: row
      align-items center
      justify-content space-between

      .left
        width: .5rem
        height: .5rem
        margin 0 .2rem
        text-align center
        display flex
        align-items center

        .icon-left
          font-size .4rem
          line-height .4rem

      .theme
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
        font-size: .2994rem

      .right
        width: .5rem
        height: .5rem
        margin 0 .3rem
        text-align center

        .icon-search
          font-size .5rem
          line-height .5rem
          font-weight 700


  .nav
    position fixed
    top 1rem
    z-index 99
    width 1.52rem

    ul
      display flex
      height 85vh
      overflow-y auto
      flex-direction column
      list-style none
      text-align center

      li
        flex: 1
        height .9rem
        font-size .26rem
        line-height .9rem
        border-right 1px solid #efefef


        a
          text-decoration none
          color #3c3c3c
          width 100%
          height 100%

        #newGoods
          color #fb7d34
          font-size .3rem
          font-weight 500


  .nav-list-wrapper
    position absolute
    width 100%
    top: 1rem
    display flex
    padding-left 1.52rem
    box-sizing border-box
    flex-direction column


    .nav-list

      width 5rem
      height 85vh
      overflow-y auto
      margin 0 auto

      .top
        width 5rem
        height 2rem

        .img-wrapper
          width inherit
          height inherit

          img
            width 100%
            height 100%


      .category-title
        width 5rem
        height 1.28rem
        line-height 1.28rem
        text-align center
        font-size .28rem
        color #3c3c3c
        margin-top .2rem
        font-weight 400

      .category-title:before
        content '— '
        color: #e0e0e0

      .category-title:after
        content ' —'
        color: #e0e0e0


      .category
        width: 5rem
        height 1.54rem
        display flex
        flex-direction row
        justify-content space-around
        margin-top .2rem
        margin-bottom .3rem

        .item-wrapper
          width 1rem
          height inherit

          .item
            width 1rem
            height inherit

            .img-wrapper
              width 1rem
              height 1rem

              img
                width: 100%;
                height 100%;

            .info
              font-size .23rem
              margin-top .28rem
              white-space nowrap
              text-overflow ellipsis
              color rgba(0, 0, 0, .54)


  .split-bottom
    width 100%
    height: 1rem
    display flex
    z-index 999
    position fixed
    bottom 0
    background-color: #fff


    ul
      flex 1
      height inherit
      list-style none
      display: flex
      flex-direction row
      align-items center

      li
        flex 1
        height inherit
        text-align center
        font-size .22rem
        color #999
        box-sizing border-box
        padding-top .15rem

        div
          margin-bottom .1rem
          display block
          text-align center
          font-size .4rem

        .icon-spilt:before
          color #ff6600


